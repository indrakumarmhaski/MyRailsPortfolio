<!DOCTYPE html>
<html>
  <head>
    <title>IndraPortfolio</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <%= render 'shared/navbar'%>
    <% if notice %>
      <%= js add_gritter(flash[:notice], :image => :notice, :title => "Attention", :time => 1000) %>
    <% elsif alert%>
      <%= js add_gritter(flash[:alert], :image => :notice, :title => "Attention!", :time => 1000) %>
    <% end %>
    <%= yield %>


  </body>
</html>
