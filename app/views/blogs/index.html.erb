<div class="fill-screen blogindexpage-bg-image" >
    <div class="blu-margin"></div>
    <div class="container text-center">
        <h1 id="blog-welcome-heading">Welcome to my blogs</h1>
        <p class="mt-3" id="blog-index-desc">Blogging is the way to share your knowledge to the outside world.</p>
        <div class="landingpage-aboutme-btn mt-lg-5">
          <%= link_to "Sign Up To Make Comments",new_user_session_path, class: "btn blog-index-signup-btn btn-lg btn-success my-2 my-sm-0"%>  
        </div>
    </div>
</div>

<h1>Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Body</th>
      <th>Blogimage</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.description %></td>
        <td><%= blog.body %></td>
        <td><%= blog.blogimage %></td>
        <td><%= blog.user.name %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>


 <%= paginate @blogs %>