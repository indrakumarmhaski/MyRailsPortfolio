<%= form_with(model: BlogComment.new, local: true) do |form| %>
  <div class="actions">
    <%= form.hidden_field 'blog_id', :value => params[:id] %>
    <div class="field">
        <%= form.label :comment %>
        <%= form.text_area :comment %>
    </div>
    <%= form.submit('Comment') %>
  </div>
<% end %>